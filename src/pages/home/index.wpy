<style lang="less">
.Home {
  .header {
    display: flex;
    align-items: center;
    width: 100%;
    height: 68rpx;
    padding: 10rpx;
    box-sizing: border-box;
    background: #f9dc8e;
    .position {
      padding: 0 18rpx;
      picker {
        width: 100%;
        .img {
          width: 48rpx;
          height: 48rpx;
          display: inline-block;
          image {
            width: 100%;
            height: 100%;
          }
        }
        .positiontxt {
          text-align: center;
          display: inline-block;
          font: 32rpx/48rpx '';
          max-width: 240rpx;
          overflow: hidden;
          text-overflow: ellipsis;
          white-space: nowrap;
          color: #999;
          margin: 0 10rpx;
        }
        .triangle {
          display: inline-block;
          width: 0;
          height: 0;
          margin-top: 10rpx;
          border: 14rpx solid #fff;
          border-left: 14rpx solid transparent;
          border-bottom: 14rpx solid transparent;
          border-right: 14rpx solid transparent;
        }
      }
    }
    .search {
      display: flex;
      flex: 1;
      width: 100%;
      background: #fff;
      border-radius: 22rpx;
      .img {
        width: 48rpx;
        height: 48rpx;
        image {
          width: 100%;
          height: 100%;
        }
      }
      .searchtxt {
        font: 22rpx/48rpx '';
        color: #999;
        padding: 0 10rpx;
      }
    }
  }
  .label {
    padding: 10rpx;
    background: #f9dc8e;
    .txt,
    .data {
      display: inline-block;
      font: 24rpx/24rpx '';
      padding: 10rpx;
      color: #fff;
    }
    .txt {
      color: #999;
    }
    .data {
      background: #ec3a4e;
      opacity: 0.65;
      border-radius: 20rpx;
      margin: 0 10rpx 10rpx 0;
    }
  }
  .swiper {
    width: 100%;
    height: 260rpx;
    swiper {
      width: 100%;
      height: 100%;
      image {
        width: 100%;
        height: 100%;
      }
    }
  }
  .harvest {
    .title {
      display: flex;
      align-items: center;
      padding: 10rpx 20rpx;
      justify-content: space-between;
      font: 30rpx/48rpx '';
      color: #999;
      .title-l {
        text {
          font-weight: 700;
          color: #f9dc8e;
        }
      }
      .title-r {
        display: flex;
        align-items: center;
        .title-rr {
          width: 48rpx;
          height: 48rpx;
          image {
            width: 100%;
